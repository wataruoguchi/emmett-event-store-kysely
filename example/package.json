{
  "name": "poc-emmett",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prepare": "husky",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "biome format --write",
    "codegen": "kysely-codegen",
    "migrate:up": "kysely migrate:up && npm run codegen",
    "migrate:down": "kysely migrate:down && npm run codegen",
    "type-check": "tsc --noEmit",
    "proj:worker": "tsx src/workers/projection-worker.ts"
  },
  "dependencies": {
    "@event-driven-io/emmett": "^0.38.5",
    "@hono/node-server": "^1.19.4",
    "hono": "^4.9.8",
    "kysely": "^0.28.7",
    "pg": "^8.16.3",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "lint-staged": "^16.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome format"
    ]
  }
}
